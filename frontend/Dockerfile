FROM node:18-alpine AS watcher
WORKDIR /app

ARG API_URL
ARG UPLOADTHING_SECRET
ARG UPLOADTHING_APP_ID
ARG SOCKET_ADDRESS
ARG UI_URL

ENV NEXT_PUBLIC_UI_URL $UI_URL
ENV NEXT_PUBLIC_SOCKET_ADDRESS $SOCKET_ADDRESS
ENV NEXT_PUBLIC_API_URL $API_URL
ENV UPLOADTHING_SECRET $UPLOADTHING_SECRET
ENV UPLOADTHING_APP_ID $UPLOADTHING_APP_ID

CMD ["npm", "run", "dev"]

EXPOSE 3000



FROM node:18-alpine AS builder
WORKDIR /app

ARG API_URL
ARG UPLOADTHING_SECRET
ARG UPLOADTHING_APP_ID
ARG SOCKET_ADDRESS
ARG UI_URL

ENV NEXT_PUBLIC_UI_URL $UI_URL
ENV NEXT_PUBLIC_SOCKET_ADDRESS $SOCKET_ADDRESS
ENV NEXT_PUBLIC_API_URL $API_URL
ENV UPLOADTHING_SECRET $UPLOADTHING_SECRET
ENV UPLOADTHING_APP_ID $UPLOADTHING_APP_ID

COPY . .

RUN npm run build

CMD ["npm", "run", "start"]

EXPOSE 3000
